<!-- updatemessage.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Update page" }) %>
<body>
  <%- include('partials/navbar') %>

  <div class="content">
    <div class="update">
      <h2>Update Message</h2>
      <form action="/single-message/<%= message._id %>?_method=PUT" method="POST">
        <label>Sender:</label>
        <input type="text" value="<%= message.sender %>" id="sender" name="sender" required />

        <label for="message">Message:</label>
        <textarea id="message" name="message" rows="4" required><%= message.message %></textarea>

        <label for="rating">rating:</label>
        <input type="number" id="rating" name="rating" required value="<%= message.rating %>" />

      


        <button type="submit">Update Message</button>
      </form>
    </div>
  </div>
</body>
</html>